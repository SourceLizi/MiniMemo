<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.MemoContentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:autofillHints=""
            android:background="@null"
            android:inputType="textNoSuggestions"
            android:text=""
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/text_info"
            app:layout_constraintEnd_toStartOf="@+id/button_voice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/button_voice"
            app:layout_constraintStart_toEndOf="@+id/text_title"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:contentDescription="Record"
            android:src="@drawable/ic_action_voice_off" />
    </LinearLayout>
        <TextView
            android:id="@+id/text_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_content"
            android:layout_marginVertical="10dp"
            android:text="|"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>
        <EditText
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:background="@null"
            android:text=""
            android:gravity="top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>